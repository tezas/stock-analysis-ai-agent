# Stock Analysis AI Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# AI Model Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_SERVER_TIMEOUT=30
MCP_SERVER_RETRY_ATTEMPTS=3

# Stock Data Configuration
STOCK_DATA_CACHE_TTL=300
STOCK_DATA_SOURCES=yahoo,alpha_vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Report Configuration
REPORT_FORMAT=markdown
REPORT_TEMPLATE=default
OUTPUT_DIR=reports/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/stock_analysis.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Performance Configuration
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Configuration
API_KEY_ENCRYPTION_ENABLED=false
SSL_VERIFY=true

# Development Configuration
DEBUG=false
TESTING=false
MOCK_MCP_SERVER=false 